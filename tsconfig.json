{
  "compilerOptions": {
     "lib": [
        "es5",
        "es6"
     ],
     "target": "es2020",
     "allowJs": true,
     "module": "commonjs",
     "moduleResolution": "node",
     "outDir": "./build",
     "rootDir": "src",
     "typeRoots": [
        "./node_modules/@types",
        "src/@types"
     ],
     "resolveJsonModule": true,
     "esModuleInterop": true,
     "removeComments": true,
     "emitDecoratorMetadata": true,
     "experimentalDecorators": true,
     "sourceMap": true
  },
  "exclude": [
    "node_modules",
    "build"
  ]
}

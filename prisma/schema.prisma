datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Categories {
  id            String      @id @map("_id") @default(uuid())
  name          String      @unique
  description   String
  url_photo      String
  products      Products[]

  @@map("categories")
}

model Products {
  id            String      @id @map("_id") @default(uuid())
  name          String      @unique
  description   String?
  url_photo     String
  price         Float 
  categories    Categories  @relation(fields: [categoriesId], references: [id], onDelete: Cascade)
  categoriesId  String 
  created       DateTime    @default(now())

  @@map("products")
}